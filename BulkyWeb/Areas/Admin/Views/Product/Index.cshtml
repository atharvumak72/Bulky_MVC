@model List<Bulky.Models.Models.Product>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="">
            <div class="row ">
                <div class="col-12 text-end">
                    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle-dotted"></i> Create New Product
                    </a>
                </div>
            </div>

            <br />

            @* <partial name="_NotificationPartialView"/> *@

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    No categories available. Click the <strong>Create New Product</strong> button above to add one.
                </div>
            }
            else
            {
                <table class="table table-bordered table-striped">
                    <thead class="">
                        <tr>
                            <th class="font-weight-bold">Title</th>
                            <th class="font-weight-bold">ISBN</th>
                            <th class="font-weight-bold">Price</th>
                            <th class="font-weight-bold">Author</th>
                            <th class="font-weight-bold">Category</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model.OrderBy(u => u.Title))
                        {
                            <tr>
                                <td>@obj.Title</td>
                                <td>@obj.ISBN</td>
                                <td>@obj.ListPrice</td>
                                <td>@obj.Author</td>
                                <td></td>

                                <td class="text-center">
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

    </div>
</div>

