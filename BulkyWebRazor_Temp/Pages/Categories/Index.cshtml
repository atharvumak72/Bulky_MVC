@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> Create New Category
            </a>
        </div>
    </div>

    <br />

    @* <partial name="_NotificationPartialView"/> *@

    @if (!Model.CategoriesList.Any())
    {
        <div class="alert alert-info">
            No categories available. Click the <strong>Create New Category</strong> button above to add one.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th class="font-weight-bold">Category Name</th>
                    <th class="font-weight-bold">Display Order</th>
                    <th class="font-weight-bold text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.CategoriesList.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td class="text-center">
                            <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
